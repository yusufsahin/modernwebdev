<%- include('partials/header'); %>
<div class="container mt-4" id="cartContainer">
  <h1>Your Cart</h1>
  <% if (cart.length > 0) { %>
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% cart.forEach(item => { %>
          <tr>
            <td><%= item.productName %></td>
            <td>$<%= item.price %></td>
            <td><%= item.quantity %></td>
            <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
            <td>
              <button class="btn btn-danger btn-sm remove-from-cart" data-id="<%= item.productId %>">Remove</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <div class="text-end">
      <h3>Total: $<%= cart.reduce((sum, item) => sum + (item.price * item.quantity), 0).toFixed(2) %></h3>
    </div>
  <% } else { %>
    <p>Your cart is empty.</p>
  <% } %>
</div>

<%- include('partials/footer'); %>
